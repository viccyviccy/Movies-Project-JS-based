{{#each this}}
<div class="feedback_item">
  <div class="feedback_content">
    <h3 class="feedback_author">{{author}}</h3>
    {{#if feedbackLength}}
    <span class="feedback_text {{feedbackLength}}">{{smallText}}<span class="hidden_text">{{extendedText}}</span><button class="hidden_textbtn">...more</button></span>
    {{else}}
    <span class="feedback_text">{{smallText}}</span>
    {{/if}}
  </div>
</div>
{{/each}}

